<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.choicely.maxmaatti">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LogoutActivity"
            android:launchMode="singleTop" />

        <activity
            android:name=".activities.AccountEventsActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.BalanceActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.TransactionActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.DepositActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.WithdrawalActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.FeaturesActivity"
            android:launchMode="singleTop" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
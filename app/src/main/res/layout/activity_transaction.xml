<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TransactionActivity">

    <TextView
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:text="@string/transaction_text_header"
        android:fontFamily="@font/arial"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:layout_centerHorizontal="true"
        android:text="@string/transaction_text_receiver"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/arial"/>

    <EditText
        android:id="@+id/activity_transaction_card_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/transaction_text_receiver_hint"
        android:inputType="numberDecimal"
        android:fontFamily="@font/arial"/>

    <Button
        android:id="@+id/activity_transaction_transfer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="68dp"
        android:layout_centerHorizontal="true"
        android:text="@string/transaction_button"
        android:fontFamily="@font/arial"/>

    <EditText
        android:id="@+id/activity_transaction_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="260dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/transaction_text_amount_hint"
        android:inputType="numberDecimal"
        android:fontFamily="@font/arial"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:fontFamily="@font/arial"
        android:text="@string/transaction_text_amount"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/activity_transaction_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/transaction_text_message_hint"
        android:inputType="textPersonName"
        android:fontFamily="@font/arial"/>


</RelativeLayout>
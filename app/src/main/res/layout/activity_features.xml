<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FeaturesActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="Welcome!"
        android:fontFamily="@font/arial"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="94dp"
        android:fontFamily="@font/arial"
        android:text="Choose your operation below"
        android:textSize="30sp" />

    <Button
        android:id="@+id/withdraw_button"
        android:layout_width="187dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="120dp"
        android:baselineAligned="false"
        android:drawableBottom="@drawable/ic_euro_symbol"
        android:fontFamily="@font/arial"
        android:text="Withdrawal" />

    <Button
        android:id="@+id/deposit_button"
        android:layout_width="187dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="211dp"
        android:layout_marginLeft="211dp"
        android:layout_marginTop="300dp"
        android:baselineAligned="false"
        android:drawableBottom="@drawable/ic_save"
        android:fontFamily="@font/arial"
        android:text="Deposit" />

    <Button
        android:id="@+id/transaction_button"
        android:layout_width="187dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="228dp"
        android:baselineAligned="false"
        android:drawableBottom="@drawable/ic_import_export"
        android:fontFamily="@font/arial"
        android:text="Transaction" />

    <Button
        android:id="@+id/acc_events_button"
        android:layout_width="187dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/transaction_button"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginBottom="9dp"
        android:baselineAligned="false"
        android:drawableBottom="@drawable/ic_account_box"
        android:fontFamily="@font/arial"
        android:text="Account Events" />

    <Button
        android:id="@+id/balance_button"
        android:layout_width="187dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="218dp"
        android:layout_marginRight="218dp"
        android:layout_marginBottom="117dp"
        android:baselineAligned="false"
        android:drawableBottom="@drawable/ic_account_balance_wallet"
        android:fontFamily="@font/arial"
        android:text="Balance" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="187dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:drawableBottom="@drawable/ic_logout"
        android:fontFamily="@font/arial"
        android:text="LOGOUT" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="91dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        app:srcCompat="@drawable/ic_arrow_downward" />


</RelativeLayout>